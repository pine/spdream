<% content_for :navbar do %>
				<li><a href="<%= root_path %>">Web Site View</a></li>
				<li><a href="<%= cms_top_config_path %>">Configure</a></li>
				<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
<% end %>

<% content_for :content do %>
<div class="col-sm-3 col-md-4 col-lg-offset-1 col-lg-3">
	<%= render 'layouts/cms_menu' %>
</div>
<div class="col-sm-9 col-md-8 col-lg-7">
	<div class="panel panel-default" id="cms_main">
		<%= yield %>
	</div>
</div>

<script>
// サイドバーとコンテンツと高さを揃える
$(function(){
	var cms_main = $("#cms_main");
	var cms_sidemenu = $("#cms_sidemenu");
	
	var cms_main_height = parseInt(cms_main.css("height"), 10);
	var cms_sidemenu_height = parseInt(cms_sidemenu.css("height"), 10);
	
	if (cms_main_height < cms_sidemenu_height) {
		cms_main.css({ minHeight: cms_sidemenu_height + "px" });
	}
});
</script>
<% end %>

<%= render file: 'layouts/cms_application' %>