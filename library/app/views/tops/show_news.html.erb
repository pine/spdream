<% #coding: utf-8 %>

<!-- header -->
<div class="row">
  <div id="header">
      <h1 class="header_title">過去のお知らせ一覧</h1>
      <div class="header_intro">このページでは、図書館からの過去のお知らせを閲覧できます。</div>
  </div>
</div>

<!-- inner -->
<p>
  <b>日付:</b>
  <%= @news.date.strftime("%Y年 %m月 %d日") %>
</p>
<p>
  <b>タイトル:</b>
  <%= @news.title %>
</p>
<p>
  <b>内容:</b>
  <%= br(@news.intro) %>
</p>
<% if (@news.photo.url != "/photos/original/missing.png") then %>
  <p>
    <b>写真:</b>
    <%= image_tag @news.photo.url, :width=>'50' %>
  </p>
 <% else %>
  
 <% end %>
