# coding: utf-8

<div class="panel-heading">カテゴリ一覧</div>

<div class="panel-body">
  <p>登録されているカテゴリの編集ができます。</p>
  <p><%= link_to '親カテゴリ追加', new_category_path %> | <%= link_to '子カテゴリ追加', new_child_category_path %></p>
  
  <div class="table-container">
    <table class="table table-striped">
      <tr>
        <th>No.</th>
        <th>名前</th>
        <th>表示順序</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
      
      <% @categories.each.with_index do |category, i| %>
        <tr>
          <td><%= i.next %></td>
          <td><%= link_to category.name, category_path(category) %></td>
          <td><%= category.priority %></td>
          <td><%= link_to '編集', edit_category_path(category) %></td>
          <td><%= link_to '削除', category, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= javascript_include_tag 'cms_books' %>