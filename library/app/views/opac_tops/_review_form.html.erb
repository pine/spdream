  <%= simple_form_for(
        @review_new,
        html: { class: 'form-horizontal', role: 'form' },
        
        # 以下2行で、ReviewTops コントローラの create メソッドに送信するように指定
        # opacplus_reviews_path は routes.rb 参照
        url: opacplus_reviews_path,
        action: :post
      ) do |f|
  %>
    <% if @review_new.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review_new.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review_new.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label(
          :title,
          label: 'タイトル&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
      
      <div class="col-sm-8">
        <%= f.text_field(
            :title,
            autofocus: true,
            class: 'form-control'
          ) %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label(
          :comment,
          label: 'コメント&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
      
      <div class="col-sm-8">
        <%= f.text_field(
            :comment,
            class: 'form-control'
          ) %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label(
          :category_id,
          label: '親カテゴリ&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.select(
            :category_id,
            Category.all.map{|category| [category.name, category.id]},
            {}, { class: 'form-control', id: 'categories' }
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :child_category_id,
          label: '子カテゴリ&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.select(
            :child_category_id,
            ChildCategory.all.map{|child_category| [child_category.name, child_category.id]},
            {}, { class: 'form-control', id: 'child_categories' }
          ) %>
    </div>
  </div>

    <div class="form-group">
      <%= f.label(
          :book_id,
          label: '蔵書&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
      
      <div class="col-sm-8">
        <%= f.select(
              :book_id,
              Book.all.map{|book| [book.title, book.id]},
              {}, { class: 'form-control' }) %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label(
          :value_book,
          label: '蔵書評価&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
      
      <div class="col-sm-8">
        <%= f.select(
              :value_book,
              [['1'], ['2'], ['3'], ['4'], ['5']],
              {}, { class: 'form-control' }) %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-12 text-center">
        <%= f.button :submit, 'この内容でレビューを投稿する', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>