<% #coding: utf-8 %>

<%= simple_form_for(
      @event,
      :html => { multipart: true, class: 'form-horizontal', role: 'form' }
  ) do |f| %>
  
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label(
          :date,
          label: '日付&nbsp;:',
          class: 'control-label col-sm-3'
      ) %>
    
    <div class="col-sm-8">
      <%= f.date_select(
          :date,
          class: 'form-control'
      ) %>    
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :title,
          label: 'タイトル&nbsp;:',
          class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_field(
            :title,
            class: 'form-control',
            autofocus: true
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :intro,
          label: '説明&nbsp;:',
          class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_area(
            :intro,
            class: 'form-control'
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :photo,
          label: '画像&nbsp;:',
          class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.file_field(
            :photo,
            class: 'form-control'
      ) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.button :submit, '送信', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
