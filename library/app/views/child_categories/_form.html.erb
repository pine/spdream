# coding: utf-8

<%= simple_form_for(
      @child_category,
      html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @child_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@child_category.errors.count, "error") %> prohibited this child_category from being saved:</h2>

      <ul>
      <% @child_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label(
      :name,
      label: '名前&nbsp;:',
      class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_field(
          :name,
           autofocus: true,
           class: 'form-control'
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
      :description,
      label: '説明&nbsp;:',
      class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_area(
          :description,
           class: 'form-control'
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
      :priority,
      label: '表示順序&nbsp;:',
      class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_field(
          :priority,
           class: 'form-control'
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
      :category_id,
      label: '親カテゴリ&nbsp;:',
      class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.select(
            :category_id,
            Category.all.map{|category| [category.name, category.id]},
            {}, { class: 'form-control' }
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.button :submit, '送信', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
