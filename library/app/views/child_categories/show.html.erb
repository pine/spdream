# coding: utf-8

<div class="panel-heading">子カテゴリ詳細「<%= @child_category.name %>」</div>

<div class="panel-body">
  <p class="well well-sm fadeout-msg"><%= notice %></p>
  
  <form class="form-horizontal show-page" role="form">
    <div class="form-group">
      <label class="control-label col-sm-3">名前:&nbsp;</label>
      <div class="col-sm-8"><%= @child_category.name %></p></div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-3">説明:&nbsp;</label>
      <div class="col-sm-8"><%= @child_category.description %></div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-3">表示順序:&nbsp;</label>
      <div class="col-sm-8"><%= @child_category.priority %></div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-3">親カテゴリ:&nbsp;</label>
      <div class="col-sm-8"><%= @child_category.category.name %></div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-12 text-center">
        <input type="button" value="編集" class="btn btn-default" onclick="location.href = '<%= edit_child_category_path(@child_category) %>'">
      </div>
    </div>
  </form>
  
  <p>
  <%= link_to '編集', edit_child_category_path(@child_category) %> |
  <%= link_to '戻る', :controller => "categories", :action => "show", :id => @child_category.category_id %></p>
</div>

<%= javascript_include_tag 'cms_books' %>