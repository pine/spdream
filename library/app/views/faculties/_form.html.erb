<%= simple_form_for(
		@faculty,
		html: { class: 'form-horizontal', role: 'form' }
		) do |f| %>

	<% if @faculty.errors.any? %>
		<ul>
 			<% @faculty.errors.full_messages.each do |msg| %>
 				<li><%= msg %></li>
 			<% end %>
 		</ul>
	<% end %>
	
	<div class="form-group">
		<%= f.label(
    		:name,
    		label: '学群名&nbsp;:',
    		class: 'control-label col-sm-3'
    	) %>
    
    <div class="col-sm-8">
	    <%= f.text_field(
	    		:name,
	    		autofocus: true,
	    		class: 'form-control'
	    	) %>
    </div>
  </div>
	
  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.button :submit, '送信', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>