# coding: utf-8

<%= simple_form_for(
		@book,
		html: { class: 'form-horizontal', role: 'form' }
	) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(
    		:title,
    		label: 'タイトル&nbsp;:',
    		class: 'control-label col-sm-3'
    	) %>
    
    <div class="col-sm-8">
	    <%= f.text_field(
	    		:title,
	    		autofocus: true,
	    		class: 'form-control'
	    	) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :auther,
          label: '作者&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.text_field(
            :auther,
            class: 'form-control'
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :outline,
          label: 'あらすじ&nbsp;:',
          class: 'control-label col-sm-3'
          ) %>
    
    <div class="col-sm-8">
      <%= f.text_area(
            :outline,
            class: 'form-control'
            ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :isbn10,
          label: 'ISBN 10&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.text_field(
            :isbn10,
            class: 'form-control'
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :isbn13,
          label: 'ISBN 13&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.text_field(
            :isbn13,
            class: 'form-control'
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :opac_id,
          label: '資料 ID&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.text_field(
            :opac_id,
            class: 'form-control'
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :value,
          label: '評価&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.select(
            :value,
            [['1'], ['2'], ['3'], ['4'], ['5']],
            {}, { class: 'form-control' }
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :category_id,
          label: '親カテゴリ&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.select(
            :category_id,
            Category.all.map{|category| [category.name, category.id]},
            {}, { class: 'form-control', id: 'categories' }
          ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :child_category_id,
          label: '子カテゴリ&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.select(
            :child_category_id,
            [], {},
            { class: 'form-control', id: 'child_categories' }
          ) %>
    </div>
  </div>
  

    <div class="form-group">
      <%= f.label(
          :request,
          label: '承認&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
      <div class="col-sm-8">
        <%= f.check_box(:request) %>
      </div>
    </div>
    
  <div class="form-group">
    <%= f.label(
          :phtoto,
          label: '画像&nbsp;:',
          class: 'control-label col-sm-3'
        ) %>
    <div class="col-sm-8">
      <%= f.file_field(
            :photo,
            class: 'form-control'
          ) %>
    </div>
  </div>
  
  <% 8.times do |i| %>
    <div class="form-group">
      <%= f.label(
            "tag#{i}".to_sym,
            label: "タグ#{i.next} &nbsp;:",
            class: 'control-label col-sm-3'
          ) %>
      <div class="col-sm-8">
        <%= f.select(
              "tag#{i}".to_sym, [],
              { include_blank: true },
              { class: 'form-control tag-list' }
            ) %>
      </div>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.button :submit, '送信', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<script>

!function(){
  //  ===== Category ================================================
  var childCategories = <%= raw ChildCategory.all.to_json %>;
  var categoriesElement = $("#categories");
  var childCategoriesElement = $("#child_categories");
  
  function updateCategoriesElement() {
    var categoryId = categoriesElement.val();
    
    childCategoriesElement.find('option').remove();
    
    $.each(childCategories, function() {
      if (this.category_id == categoryId) {
        $('<option />')
          .attr('value', this.id)
          .text(this.name)
          .appendTo(childCategoriesElement);
      }
    });
  }
  
  updateCategoriesElement();
  categoriesElement.on('change', updateCategoriesElement);
  
  //  ===== Tag =====================================================
  var tags = <%= raw Tag.all.to_json %>;
  var tagFlags = [];
  var tagElements = $('.tag-list');
  
  function initTagFlags() {
    $.each(tags, function() {
      tagFlags[this.id] = true;
    });
  }
  
  function addTagListener() {
    tagElements.on('change', function() {
      updateTagFlags();
      updateTagHtml();
    });
  }
  
  function getEnabledTags(currentTagId) {
    var enabledTags = [];
    
    $.each(tags, function() {
      if (tagFlags[this.id] || this.id == currentTagId) {
        enabledTags.push(this);
      }
    });
    
    return enabledTags;
  }
  
  function updateTagFlags() {
    initTagFlags();
    
    tagElements.each(function() {
      if ($(this).val() != "") {
        tagFlags[$(this).find(':selected').attr('data-tag-id')] = false;
      }
    });
  }
  
  function updateTagHtml() {
    tagElements.each(function(i, tagElement) {
      var selected = $(tagElement).find(':selected');
      var selectedId = selected.attr('data-tag-id');
      var enabledTags = getEnabledTags(selectedId);
      
      $(tagElement).find(':not(:empty)').remove();
      
      $.each(enabledTags, function(j, enabledTag) {
        var ele = $('<option />')
          .text(enabledTag.name)
          .attr('data-tag-id', enabledTag.id);
          
          if (enabledTag.id == selectedId) {
            ele.attr('selected', 'selected');
          }
          
          ele.appendTo(tagElement);
      });
    });
  }
  
  initTagFlags();
  addTagListener();
  updateTagHtml();
}();

</script>