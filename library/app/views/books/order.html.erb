# coding: utf-8
<div class="panel-heading">蔵書追加承認</div>

<div class="panel-body">
  <p class="well well-sm fadeout-msg"><%= notice %></p>
  
  <div class="table-container">
    <table class="table table-striped">
      <tr>
        <th>No.</th>
        <th>タイトル</th>
        <th>著者</th>
        <th>あらすじ</th>
        <th>評価</th>
        <th>承認</th>
        <th>削除</th>
      </tr>
      
      <% @books.each.with_index do |book, i| %>
        <tr>
          <td><%= i.next %></td>
          <td><%= book.title %></td>
          <td><%= book.auther %></td>
          <td><%= book.outline %></td>
          <td><%= book.value %></td>
          <td><%= link_to '承認', book_path(book), :method => :post %></td>
          <td><%= link_to '削除', book, :confirm => 'このレビューを削除しますか？', :method => :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
  
  <p><%= link_to '戻る', books_path %></p>
</div>

<%= javascript_include_tag 'cms_books' %>