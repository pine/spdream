<%= simple_form_for(
  @lab,
  html: { class: 'form-horizontal', role: 'form' }
  ) do |f| %>
  
	<% if @lab.errors.any? %>
		<ul>
 			<% @lab.errors.full_messages.each do |msg| %>
 				<li><%= msg %></li>
 			<% end %>
 		</ul>
	<% end %>
  
  <div class="form-group">
    <%= f.label(
          :name,
          label: '研究室名&nbsp;:',
          class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.text_field(
          :name,
          autofocus: true,
          class: 'form-control'
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label(
          :faculty_id,
          label: '学群名&nbsp;:',
          class: 'control-label col-sm-3'
    ) %>
    
    <div class="col-sm-8">
      <%= f.select(
          :faculty_id,
          Faculty.all.map{|faculty| [faculty.name, faculty.id]},
          {}, { class: 'form-control' }
      ) %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-12 text-center">
      <%= f.button :submit, '送信', class: 'btn btn-default' %>
    </div>
  </div>
</form>
<% end %>