# coding: utf-8
<h1>削除履歴</h1>

<div id="notice"><%= notice %></div>
<table border='1'>
	<tr>
		<th>タイトル</th>
		<th>いんね</th>
		<th>よくないね</th>
		<th>蔵書</th>
		<th>蔵書評価</th>
		<th>日時</th>
		<th>復元</th>
		<th>削除</th>
	</tr>

	<% @reviews.each do |review| %>
		<% if review.deleted == true %>
		<tr>
	      <td><%= link_to review.title, review_path(review) %></td>
    	  <td><%= review.value_good %></td>
	      <td><%= review.value_bad %></td>
 	      <td><%= review.book.title %></td>
    	  <td><%= review.value_book %></td>
   		  <td><%= review.date %></td>
			<th><%= link_to '復元', review_path(review), :method => :pute %></th>
			<th><%= link_to '削除', review, :confirm => 'このレビューを削除しますか？', :method => :delete %></th>
		</tr>
		<% end %>
	<% end %>
</table>

<%= link_to '戻る', reviews_path %>

<%= javascript_include_tag 'cms_books' %>