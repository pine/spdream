# coding: utf-8
<div class="panel-heading">論文TOP</div>

<div class="panel-body">
  <p class="well well-sm fadeout-msg"><%= notice %></p>
  
  <%#= 学群一覧表示 %>
  <table class="table table-striped">
    <tr>
      <% @faculties.each do |faculty| %>
        <td><%= link_to faculty.name, :controller => 'theses', :action => 'faculty', :id => faculty.id %></td>
      <% end %>
    </tr>
  </table>
  
  <p><%= link_to "学群の編集", faculties_path %> | <%= link_to "論文を表示しない", theses_path %></p>
  
  <%= render 'index' %>
  <p><%= link_to '論文新規登録', new_thesis_path %> | <%= link_to '削除履歴', deleted_theses_path %></p>
</div>

<%= javascript_include_tag 'cms_theses' %>
