# coding: utf-8

<div class="panel-heading">論文一覧</div>

<div class="panel-body">
  <p class="welll well-sm fadeout-msg"><%= notice %></p>
  
  <p><%= link_to 'すべての論文を表示する', all_theses_path %>&nbsp;|
    <%= link_to '論文新規登録', new_thesis_path %> | <%= link_to '削除履歴', deleted_theses_path %></p>
  
  <div class="table-container">
    <table class="table table-striped">
      <tr>
        <% @faculties.each do |faculty| %>
          <td><%= link_to faculty.name, :controller => 'theses', :action => 'faculty', :id => faculty.id %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>

<%= javascript_include_tag 'cms_theses' %>
