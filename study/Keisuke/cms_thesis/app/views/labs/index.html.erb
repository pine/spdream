# coding: utf-8

<h1>研究室編集ページ</h1>

<div id="notice"><%= notice %></div>

<table border="1" cellspacing="0" cellpadding="5">
	<tr>
		<th>研究室名</font></th>
		<th>編集</th>
		<th>削除</th>
	</tr>
	<% @labs.each do |lab| %>
		<tr>
			<td><%= lab.name %></td>
			<td><%= link_to'編集', edit_lab_path(lab) %></td>
			<td><%= link_to'削除', lab, :confirm => 
				'削除しますか？(所属する論文は「無所属」となります)',
										:method => :delete %></td>
		</tr>
	<% end %>
</table>

<br>

<%= link_to '新規登録', new_lab_path %>

