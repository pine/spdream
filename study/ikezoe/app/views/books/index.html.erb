<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>あらすじ</th>
      <th>Isbn</th>
      <th>Opac</th>
      <th>Value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auther %></td>
        <td><%= book.outline %></td>
        <td><%= book.isbn %></td>
        <td><%= book.opac_id %></td>
        <td><%= book.value %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

