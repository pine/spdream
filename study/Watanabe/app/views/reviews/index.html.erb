# coding: utf-8

<h1>Opac+ レビュー一覧</h1>

<%= link_to 'レビュー追加', new_review_path %>

<table border='1'>
  <tr>
    <th>タイトル</th>
    <th>評価上</th>
    <th>評価下</th>
    <th>公開状態</th>
    <th>日時</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= link_to review.title, review_path(review) %></td>
    <td><%= review.value_good %></td>
    <td><%= review.value_bad %></td>
    <td><%= review.enabled %></td>
    <td><%= review.date %></td>
    <td><%= link_to '編集', edit_review_path(review) %></td>
    <td><%= link_to '削除', review, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
  </tr>
<% end %>
</table>

<br />

