# coding: utf-8

<h1>蔵書追加編集</h1>

<%= link_to '本の追加', new_book_path %>

<p>

<table border='1'>
  <tr>
    <th>タイトル</th>
    <th>評価</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.value %></td>
    <td><%= link_to '編集', edit_book_path(book) %></td>
    <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
<% end %>
</table>

<br />

