# coding: utf-8

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"
    <%= f.label :タイトル %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :著者 %><br />
    <%= f.text_field :auther %>
  </div>
  <div class="field">
    <%= f.label :あらすじ %><br />
    <%= f.text_area :outline %>
  </div>
  <div class="field">
    <%= f.label :isbn10 %><br />
    <%= f.text_field :isbn10 %>
  </div>
  <div class="field">
    <%= f.label :isbn13 %><br />
    <%= f.text_field :isbn13 %>
  </div>
  <div class="field">
    <%= f.label :資料ID %><br />
    <%= f.text_field :opac_id %>
  </div>
  <div class="field">
    <%= f.label :評価 %><br />
    <%= f.number_field :value %>
  </div>
  <div class="field">
    <%= f.label :親カテゴリ %><br />
    <%= f.select :category_id, Category.all.map{|category| [category.name, category.id]}%>
  </div>
  <div class="field">
    <%= f.label  :子カテゴリ %><br />
    <%= f.select :child_category_id, ChildCategory.all.map{|child_category| [child_category.name, child_category.id]}%>
  </div>
  <div class="field">
    <%= f.label :タグ %><br />
    <%= f.collection_select(:tag_id, Tag.find(:all), :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
