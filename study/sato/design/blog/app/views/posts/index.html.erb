		<div class="row">
			<% @posts.each do |post| %>
			<div class="col-sm-6 col-md-4">
				<div class="thumbnail">
					<%= image_tag 'test.png' %>
				</div>
				<div class="caption">
					<h3>Book Title</h3>
					<p>
						Title : <%= link_to post.title, post_path(post) %><br>
						Author : XXXXXXXX
					</p>
				</div>
			</div>
			<% end %>
		</div>

		<div class="well well-lg">
			<ul class="media-list">
				<% @posts.each do |post| %>
				<li class="media">
					<a class="pull-left" href="#">
						<%= image_tag 'test.png' %>
					</a>
					<div class="media-body">
						<h4 class="media-heading">
							<%= link_to post.title, post_path(post) %>
						</h4>
						<p>
							Datail 1 : XXXXXXXX<br>
							Datail 2 : XXXXXXXX
						</p>
					</div>
				</li>
				<% end %>
			</ul>
		</div>	
		<div class="text-center">
			<button type="button" class="btn btn-default">
				<%= link_to 'Goto Home', posts_path %>
			</button>
			<button type="button" class="btn btn-default">
				<%= link_to 'New Post', new_post_path %>
			</button>
		</div>
	</div>
	<div class="col-md-4 hidden-sm hidden-xs">
		<div class="well well-lg">
			<h3>Calendar</h3>
			<button type="button" class="btn btn-default">
				<%= link_to 'View Calendar', calendar_path %>
			</button>
		</div>
	</div>
