<div class="row">
	<div class="col-md-8">
		<div class="row">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#notice" data-toggle="tab">お知らせ</a></li>
				<li><a href="#ivent" data-toggle="tab">イベント</a></li>
				<li><a href="#newbook" data-toggle="tab">新着図書</a></li>
			</ul>
		</div>

		<div class="tab-content">
			<div class="tab-pane active" id="notice">
				<ul class="media-list">
					<% @posts.each do |post| %>
					<li class="media">
						<a class="pull-left" href="#">
							<%= image_tag 'test.png' %>
						</a>
						<div class="media-body">
							<h4 class="media-heading"><%= link_to post.title, post_path(post) %></h4>
							<p>
								Datail 1 : XXXXXXXX<br>
								Datail 2 : XXXXXXXX
							</p>
						</div>
					</li>
					<% end %>
				</ul>
			</div>

			<div class="tab-pane" id="ivent">
				<div class="row">
				<% @posts.each do |post| %>
					<div class="col-sm-6 col-md-4">
						<div class="thumbnail">
							<%= image_tag 'test.png' %>
						</div>
						<div class="caption">
							<h3>Book Title</h3>
							<p>
								Title : <%= link_to post.title, post_path(post) %><br>
								Author : XXXXXXXX
							</p>
						</div>
					</div>
				<% end %>
				</div>
			</div>

			<div class="tab-pane" id="newbook">
				<ul class="media-list">
					<% @posts.each do |post| %>
					<li class="media">
						<div class="panel panel-default">
							<div class="panel-heading">
								<%= link_to post.title, post_path(post) %>
							</div>
							<div class="panel-body">
								<a class="pull-left" href="#">
									<%= image_tag 'test.png' %>
								</a>
								<div class="media-body">
									<h4 class="media-heading"><%= link_to post.title, post_path(post) %></h4>
									<p>
										Datail 1 : XXXXXXXX<br>
										Datail 2 : XXXXXXXX
									</p>
								</div>
							</div>
						</div>
					</li>
					<% end %>
				</ul>

				<a data-toggle="modal" href="#modal" class="btn btn-primary">
					show me!
				</a>

				<div class="modal fade" id="modal">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button class="close" data-dismiss="modal">&times;</button>
								My modal
							</div>
							<div class="modal-body">
								Hello World!
							</div>
							<div class="modal-footer">
								<button class="btn btn-primary">OK</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="text-center">
			<button type="button" class="btn btn-default">
				<%= link_to 'Goto Home', posts_path %>
			</button>
			<button type="button" class="btn btn-default">
				<%= link_to 'New Post', new_post_path %>
			</button>
		</div>
	</div>
	<div class="col-md-4 hidden-sm hidden-xs">
		<div class="well">
			<h3>Calendar</h3>
			<div id="calendar_view"></div>
			
			<script>
			$("#calendar_view").load("<%= calendar_path %> .ec-calendar");
			</script>
			
		</div>
	</div>
</div>